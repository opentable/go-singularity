{
  "apiVersion" : "0.15.1",
  "swaggerVersion" : "1.2",
  "basePath" : null,
  "resourcePath" : "/api/sandbox",
  "produces" : [ "application/json" ],
  "apis" : [ {
    "path" : "/api/sandbox/{taskId}/browse",
    "operations" : [ {
      "method" : "GET",
      "summary" : "Retrieve information about a specific task's sandbox.",
      "notes" : "",
      "type" : "SingularitySandbox",
      "nickname" : "browse",
      "parameters" : [ {
        "name" : "taskId",
        "description" : "The task ID to browse",
        "required" : true,
        "type" : "string",
        "paramType" : "path",
        "allowMultiple" : false
      }, {
        "name" : "path",
        "description" : "The path to browse from",
        "required" : false,
        "type" : "string",
        "paramType" : "query",
        "allowMultiple" : false
      } ]
    } ]
  }, {
    "path" : "/api/sandbox/{taskId}/read",
    "operations" : [ {
      "method" : "GET",
      "summary" : "Retrieve part of the contents of a file in a specific task's sandbox.",
      "notes" : "",
      "type" : "MesosFileChunkObject",
      "nickname" : "read",
      "parameters" : [ {
        "name" : "taskId",
        "description" : "The task ID of the sandbox to read from",
        "required" : true,
        "type" : "string",
        "paramType" : "path",
        "allowMultiple" : false
      }, {
        "name" : "path",
        "description" : "The path to the file to be read",
        "required" : false,
        "type" : "string",
        "paramType" : "query",
        "allowMultiple" : false
      }, {
        "name" : "grep",
        "description" : "Optional string to grep for",
        "required" : false,
        "type" : "string",
        "paramType" : "query",
        "allowMultiple" : false
      }, {
        "name" : "offset",
        "description" : "Byte offset to start reading from",
        "required" : false,
        "type" : "integer",
        "format" : "int64",
        "paramType" : "query",
        "allowMultiple" : false
      }, {
        "name" : "length",
        "description" : "Maximum number of bytes to read",
        "required" : false,
        "type" : "integer",
        "format" : "int64",
        "paramType" : "query",
        "allowMultiple" : false
      } ]
    } ]
  } ],
  "models" : {
    "SingularitySandbox" : {
      "id" : "SingularitySandbox",
      "description" : "Represents the path to a specific task's Mesos sandbox",
      "properties" : {
        "files" : {
          "type" : "array",
          "description" : "List of files inside sandbox",
          "items" : {
            "$ref" : "SingularitySandboxFile"
          }
        },
        "fullPathToRoot" : {
          "type" : "string",
          "description" : "Full path to the root of the Mesos task sandbox"
        },
        "currentDirectory" : {
          "type" : "string",
          "description" : "Current directory"
        },
        "slaveHostname" : {
          "type" : "string",
          "description" : "Hostname of tasks's slave"
        }
      }
    },
    "MesosFileChunkObject" : {
      "id" : "MesosFileChunkObject",
      "properties" : {
        "data" : {
          "type" : "string"
        },
        "offset" : {
          "type" : "integer",
          "format" : "int64"
        },
        "nextOffset" : {
          "type" : "integer",
          "format" : "int64"
        }
      }
    },
    "SingularitySandboxFile" : {
      "id" : "SingularitySandboxFile",
      "description" : "Represents a file in a Mesos sandbox",
      "properties" : {
        "name" : {
          "type" : "string",
          "description" : "Filename"
        },
        "mtime" : {
          "type" : "integer",
          "format" : "int64",
          "description" : "Last modified time"
        },
        "size" : {
          "type" : "integer",
          "format" : "int64",
          "description" : "File size (in bytes)"
        },
        "mode" : {
          "type" : "string",
          "description" : "File mode"
        }
      }
    }
  }
}